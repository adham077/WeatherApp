<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Full gradient background -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <gradient
                android:startColor="#00FF00"
                android:endColor="#FF0000"
                android:angle="0"/>
        </shape>
    </item>

    <!-- Left mask (covers temperatures below low) -->
    <item android:id="@+id/left_mask">
        <scale
            android:scaleWidth="1"
            android:scaleGravity="left">
            <shape android:shape="rectangle">
                <solid android:color="#E0E0E0"/>
            </shape>
        </scale>
    </item>

    <!-- Right mask (covers temperatures above high) -->
    <item android:id="@+id/right_mask">
        <scale
            android:scaleWidth="1"
            android:scaleGravity="right">
            <shape android:shape="rectangle">
                <solid android:color="#E0E0E0"/>
            </shape>
        </scale>
    </item>
</layer-list>